<%= @business.name %>

<%= form_for @new_product do |form| %>
  <%= form.text_field :name %>
  <%= form.hidden_field :business_id, value: @business.id %>
  <%= form.submit %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Product name</th>
    </tr>
  </thead>
  <%= render @products %>
</table>
